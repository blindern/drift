# https://docs.fedoraproject.org/en-US/fedora-coreos/producing-ign/

variant: fcos
version: 1.4.0

passwd:
  users:
    - name: core
      ssh_authorized_keys:
        # SSH keys used for initial provisioning.
        # The Ansible setup will remove this after putting correct keys in place.
        - "ssh-rsa  henrist@henrist.net"

storage:
  filesystems:
    - path: /var/mnt/data
      label: data
      device: /dev/vdb
      format: ext4
      with_mount_unit: true

  files:
    ##
    # host keys
    - path: /etc/ssh/ssh_host_dsa_key
      mode: 0600
      contents:
        local: host-keys/ssh_host_dsa_key
    - path: /etc/ssh/ssh_host_dsa_key.pub
      mode: 0644
      contents:
        local: host-keys/ssh_host_dsa_key.pub
    - path: /etc/ssh/ssh_host_ecdsa_key
      mode: 0600
      contents:
        local: host-keys/ssh_host_ecdsa_key
    - path: /etc/ssh/ssh_host_ecdsa_key.pub
      mode: 0644
      contents:
        local: host-keys/ssh_host_ecdsa_key.pub
    - path: /etc/ssh/ssh_host_ed25519_key
      mode: 0600
      contents:
        local: host-keys/ssh_host_ed25519_key
    - path: /etc/ssh/ssh_host_ed25519_key.pub
      mode: 0644
      contents:
        local: host-keys/ssh_host_ed25519_key.pub
    - path: /etc/ssh/ssh_host_rsa_key
      mode: 0600
      contents:
        local: host-keys/ssh_host_rsa_key
    - path: /etc/ssh/ssh_host_rsa_key.pub
      mode: 0644
      contents:
        local: host-keys/ssh_host_rsa_key.pub
    # end host keys

    - path: /etc/zincati/config.d/55-updates-strategy.toml
      contents:
        inline: |
          [updates]
          strategy = "periodic"
          [[updates.periodic.window]]
          days = [ "Sun" ]
          start_time = "22:30"
          length_minutes = 60

    # Set vim as default editor
    # We use `zz-` as prefix to make sure this is processed last in order to
    # override any previously set defaults.
    - path: /etc/profile.d/zz-default-editor.sh
      overwrite: true
      contents:
        inline: |
          export EDITOR=vim

  directories:
    - path: /var/mnt/data
      user:
        name: core
      group:
        name: core

systemd:
  units:
    # Python is needed for Ansible.
    # Vim for convenience.
    - name: rpm-ostree-install-extras.service
      enabled: true
      contents: |
        [Unit]
        Description=Layer extra packages with rpm-ostree
        Wants=network-online.target
        After=network-online.target
        # We run before `zincati.service` to avoid conflicting rpm-ostree
        # transactions.
        Before=zincati.service
        ConditionPathExists=!/var/lib/%N.stamp

        [Service]
        Type=oneshot
        RemainAfterExit=yes
        # `--allow-inactive` ensures that rpm-ostree does not return an error
        # if the package is already installed. This is useful if the package is
        # added to the root image in a future Fedora CoreOS release as it will
        # prevent the service from failing.
        ExecStart=/usr/bin/rpm-ostree install --apply-live --allow-inactive git-crypt docker-compose python tmux vim
        ExecStart=/bin/touch /var/lib/%N.stamp

        [Install]
        WantedBy=multi-user.target
