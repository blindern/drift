{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/(^|/|\\.)Dockerfile$/",
        "/(^|/)Dockerfile[^/]*$/"
      ],
      "matchStrings": [
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\sENV .*?_VERSION=(?<currentValue>.*)\\s",
        "datasource=(?<datasource>.*?) depName=(?<depName>.*?) tag=(?<currentValue>.*)\\sENV .*?_COMMIT=(?<currentDigest>[a-f0-9]{40})\\s"
      ]
    },
    {
      "customType": "regex",
      "description": "Keep docker-credential-gcp version up-to-date.",
      "managerFilePatterns": [
        "/ansible/roles/docker-credential-gcr/vars/main.yml/"
      ],
      "matchStrings": [
        "docker_credential_gcr_version: \"(?<currentValue>.+?)\""
      ],
      "depNameTemplate": "GoogleCloudPlatform/docker-credential-gcr",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^ansible/.+\\.ya?ml$/"],
      "matchStrings": [
        "_image: (?<depName>.*?):(?<currentValue>.*?)(@(?<currentDigest>sha256:[a-f0-9]+))? # renovate"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "minimumReleaseAgeBehaviour": "timestamp-optional"
  },
  "packageRules": [
    {
      "matchFileNames": [
        "e2e-tests/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "lockFileMaintenance"
      ],
      "automerge": true,
      "commitMessageSuffix": "({{parentDir}})"
    },
    {
      "matchFileNames": [
        "services/**"
      ],
      "additionalBranchPrefix": "{{parentDir}}-",
      "commitMessageSuffix": "({{parentDir}})"
    },
    {
      "matchDepNames": ["php"],
      "separateMultipleMinor": true
    },
    {
      "matchFileNames": ["ansible/**"],
      "additionalBranchPrefix": "v{{currentVersion}}-",
      "commitMessageExtra": "(from {{currentVersion}})"
    },
    {
      "matchDatasources": ["docker", "github-actions"],
      "matchUpdateTypes": ["digest"],
      "automerge": true,
      "schedule": ["before 9am on monday"]
    },
    {
      "description": "Disable minimum release age for sources without release timestamps",
      "matchDatasources": ["docker"],
      "minimumReleaseAgeBehaviour": "timestamp-optional"
    },
    {
      "description": "Group signoz updates",
      "matchDepNames": [
        "signoz/signoz",
        "signoz/signoz-otel-collector",
        "signoz/signoz-schema-migrator",
        "signoz/zookeeper",
        "clickhouse/clickhouse-server"
      ],
      "groupName": "signoz"
    }
  ],
  "rebaseWhen": "conflicted",
  "minimumReleaseAge": "3 days",
  "prNotPendingHours": 74,
  "prConcurrentLimit": 30,
  "prHourlyLimit": 10
}
